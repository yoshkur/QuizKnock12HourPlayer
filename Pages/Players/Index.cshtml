                @Html.DisplayFor(modelItem => item.Seikai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gotou1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reset1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gotou2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reset2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gotou3)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Userid">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Userid">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Userid">Delete</a>
